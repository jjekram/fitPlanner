	<p id="notice"><%= notice %></p>
	<div style="text-align:right;">
		<a href="<%=edit_routine_path(@routine)%>" data-mini="true" data-icon="edit" data-theme="b" data-inline="true" data-role="button">Edit</a>
	</div>
<p>
  <b>Name:</b>
  <%= @routine.name %>
</p>

<p>
  <b>Days:</b>
  <%= @routine.days %>
</p>

<p>
  <b>User:</b>
  <%= @routine.workouts %>
</p>
</div>

<%= link_to 'Edit', edit_routine_path(@routine) %> |
